<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/card_background"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/petNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🐾 Buddy"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_brown" />

            <TextView
                android:id="@+id/petDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golden Retriever • 3 years old"
                android:textSize="16sp"
                android:textColor="@color/text_gray" />
        </LinearLayout>
        
        <Button
            android:id="@+id/switchPetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch Pet"
            android:textColor="@color/text_brown"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:textAllCaps="false"
            android:stateListAnimator="@null" />
    </LinearLayout>

    <!-- Last Fed & Food Remaining -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/lastFedLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/component_background">

            <TextView
                android:text="Last Fed"
                android:textColor="@color/text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lastFedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today, 8:30 AM"
                android:textColor="@color/text_pink"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fedByTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by Mike"
                android:textSize="12sp"
                android:textColor="@color/text_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/foodRemainingLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/component_background">

            <TextView
                android:text="Food Remaining"
                android:textColor="@color/text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/foodRemainingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2 kg"
                android:textColor="@color/text_pink"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/estimatedDaysLeftTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~7 days left"
                android:textSize="12sp"
                android:textColor="@color/text_gray" />
        </LinearLayout>
    </LinearLayout>

    <!-- Vet Appointment -->
    <LinearLayout
        android:id="@+id/vetAppointmentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:background="@drawable/component_background">

        <TextView
            android:text="Next Vet Appointment"
            android:textColor="@color/text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/vetDateTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="May 15, 2025 - 2:00 PM"
            android:textColor="@color/text_pink"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/vetDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Martinez - Annual Checkup"
            android:textSize="12sp"
            android:textColor="@color/text_gray" />
    </LinearLayout>
</LinearLayout>
