<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/rounded_item_background"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- Pet Icon -->
    <ImageView
        android:id="@+id/petIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_pet_placeholder"
        android:tint="@color/text_pink"
        android:contentDescription="Pet icon" />

    <!-- Pet Info Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <!-- Pet Name -->
        <TextView
            android:id="@+id/petName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="Buddy" />

        <!-- Pet Details -->
        <TextView
            android:id="@+id/petDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            tools:text="Golden Retriever â€¢ 3 years old" />
    </LinearLayout>

    <!-- Arrow Icon -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        android:tint="@color/text_pink"
        android:contentDescription="View pet details" />
</LinearLayout> 